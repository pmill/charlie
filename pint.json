{
    "preset": "laravel",
    "exclude": [
        "storage",
        "vendor",
        "node_modules"
    ],
    "rules": {
        "concat_space": { "spacing": "one" },
        "no_unused_imports": true,
        "single_quote": true,
        "trailing_comma_in_multiline": { "elements": ["arrays"] },
        "array_syntax": { "syntax": "short" },
        "blank_line_before_statement": {
            "statements": ["return"]
        },
        "class_attributes_separation": { "elements": { "method": "one" } }
    }
}
